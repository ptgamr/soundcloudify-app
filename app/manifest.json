{
  	"name": "__MSG_appName__",
  	"description": "__MSG_appDescription__",
  	"version": "1",
  	"manifest_version": 2,
  	"default_locale": "en",
  	"permissions": [
      "webRequest",
      "webRequestBlocking",
  		"app.runtime",
  		"app.window",
  		"audio",
  		"storage",
  		"system.storage",
  		"unlimitedStorage",
  		"<all_urls>",
  		"http://*/*",
  		"https://*/*",
  		"http://127.0.0.1/*",
  		"chrome-extension://*/*"
  	],
  	"icons": {
  		"16": "images/icon-16.png",
  		"128": "images/icon-128.png"
  	},
  	"app": {
  		"background": {
        "page": "background.html"
      },
      "content_security_policy": "script-src 'self' 'unsafe-eval' i1.sndcdn.com https://www.google-analytics.com https://api.soundcloud.com https://api-v2.soundcloud.com; object-src 'self'"
  	}
  }